@{
}

<div class="row">
    <div class="col">
        <button class="btn btn-outline-success"
                type="submit"
                value="Add"
                asp-action="Add">
                Add
        </button>
    </div>
</div>

@for (int i = 0; i < Model.StudentAddress.Count; i++)
{
    <div class="row">
        <div class="col">
            @Html.LabelFor(m => Model.StudentAddress[i].Address)
            @Html.TextBoxFor(m => Model.StudentAddress[i].Address)
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Html.LabelFor(m => Model.StudentAddress[i].City)
            @Html.TextBoxFor(m => Model.StudentAddress[i].City)
        </div>
    </div>
}